<h2>Questions</h2>

<table class="table table-bordered">
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th>Value</th>
		
	</tr>
	<% @questions.each do |question| %>
		<tr>
			<td><%= link_to(question.title, question_path(question) ) %></td>
			<td><%= question.text %></td>
			<td><%= question.value %></td>
			<td><%= link_to 'Destroy', question_path(question), class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure you want to delete question?'} %></td>
			
		</tr>
		<% end %>
	</table>
	
	<%= link_to 'Add Question', new_question_path, class: 'btn btn-primary' %>
